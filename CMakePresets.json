  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "description": "Base configuration for all presets",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "base",
      "description": "Base configuration for Windows builds",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": ["Windows"]
        }
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "base",
      "description": "Base configuration for Linux builds",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "inherits": "base",
      "description": "Base configuration for macOS builds",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "ninja",
      "hidden": true,
      "description": "Use Ninja generator",
      "generator": "Ninja"
    },
    {
      "name": "make",
      "hidden": true,
      "description": "Use Unix Makefiles generator",
      "generator": "Unix Makefiles"
    },
    {
      "name": "msbuild",
      "hidden": true,
      "description": "Use Visual Studio generator (MSBuild)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64"
    },
    {
      "name": "msvc",
      "hidden": true,
      "description": "MSVC compiler configuration",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "clang",
      "hidden": true,
      "description": "Clang compiler configuration",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "gcc",
      "hidden": true,
      "description": "GCC compiler configuration",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },

    {
      "name": "debug-config",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HELIOS_ENABLE_ASSERTS": "ON",
        "HELIOS_ENABLE_PROFILING": "OFF"
      }
    },
    {
      "name": "release-config",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "HELIOS_ENABLE_LTO": "ON",
        "HELIOS_ENABLE_ASSERTS": "OFF"
      }
    },
    {
      "name": "relwithdebinfo-config",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "HELIOS_ENABLE_ASSERTS": "ON",
        "HELIOS_ENABLE_PROFILING": "ON"
      }
    },
    {
      "name": "all-modules",
      "hidden": true,
      "cacheVariables": {
        "HELIOS_BUILD_CORE_ONLY": "OFF"
      }
    },
    {
      "name": "core-only",
      "hidden": true,
